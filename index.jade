doctype html
html
  head
    meta(charset='UTF-8')

    title Chloris Floral

    - var cdn = 'http://maxcdn.bootstrapcdn.com'
    link(rel='stylesheet'
      href=cdn + '/font-awesome/4.2.0/css/font-awesome.min.css')

    link(href='http://fonts.googleapis.com/css?family=Dancing+Script'
      rel='stylesheet' type='text/css')

    link(rel="stylesheet", href="style.css")

  body
      #background
        img(src='http://photos-a.ak.instagram.com/hphotos-ak-xfa1' +
          '/t51.2885-15/10838919_1547601922150798_611139977_n.jpg')

      #content
        #header
          .social
            a.facebook(target='_blank' title='Visit us on Facebook'
              href='https://www.facebook.com/pages' +
              '/Chloris-Floral/830014150352574')
              span.fa.fa-facebook

            a.instagram(target='_blank' title='Visit us on Instagram'
              href='http://instagram.com/chlorisfloral')
              span.fa.fa-instagram

            a.email(target='_blank' title='Contact by email'
              href='email:betany@chlorisfloral.com')
              span.fa.fa-envelope

          a(href='#')
            img(src='images/chloris_floral-logo.png')

          #menu
            ul

        #pages
          #home
            p Local, farm fresh & pesticide free.

          #about(title='About')
            h1 About Chloris Floral

            p
              | Chloris Floral (<em>Klor-REESE</em>) in Sonoma County.
              | Blooms and foliage are always 100% local, fresh and sustainably
              | grown from local flower farms and our garden.

          #portfolio(title='Portfolio')
            h1 Portfolio

            #instafeed

          #csa(title='Flower CSA')
            h1 About our CSA

          #events(title='Events')
            h1 Events

          #contact(title='Contact')
            h1 Contact Info

            table
              tr
                th Phone:
                td (208) 409-6992
              tr
                th Email:
                td
                  a(href="mailto:betany@chlorisfloral.com")
                    | betany@chlorisfloral.com

        #footer
          .copyright
            | Copyright &copy; Chloris Floral, 2014-2015.

      - var cdn = 'http://cdnjs.cloudflare.com/ajax/libs'
      script(src=cdn + "/jquery/2.1.3/jquery.min.js")
      script(src="instafeed.min.js")
      script(src="main.js")
